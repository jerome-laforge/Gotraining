{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Books",
    "description": "#### Manage library\n"
  },
  "schemes": [
    "http"
  ],
  "basePath": "/api/v1",
  "paths": {
    "/books": {
      "get": {
        "responses": {
          "200": {
            "description": "List all books",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Book"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/book": {
      "get": {
        "description": "Get book's information",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "name of the book",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Book's information",
            "schema": {
              "$ref": "#/definitions/Book"
            }
          },
          "404": {
            "description": "Book not found"
          }
        }
      },
      "post": {
        "description": "Create a new book",
        "operationId": "addNewBook",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Book to add into library",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book created"
          },
          "409": {
            "description": "Book already exists"
          }
        }
      },
      "delete": {
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "name of the book",
            "required": true,
            "type": "string"
          }
        ],
        "description": "Delete this book",
        "responses": {
          "200": {
            "description": "Book deleted"
          },
          "404": {
            "description": "Book not found"
          }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Author": {
          "type": "string"
        },
        "Price": {
          "type": "integer"
        }
      }
    }
  }
}